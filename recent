all_voters=["lol"]
president_dem=0
president_rep=0
president_green=0
senator_dem=0
senator_rep=0
senator_green=0
house_dem=0
house_rep=0
house_green=0
gov_dem=0
gov_rep=0
gov_green=0
while True:
    #print("---------- Type exit to show election results.")
    age_input = input("Please enter your age (Or type exit to show election reults): ")
    if age_input == "exit":
        print("Showing relults now......")
        break
    voter_age = int(age_input)
    if voter_age < 18:
        print("Access denied! Only those 18 years and older may vote.\nStep aside. Next voter, you may now proceed.\n..........")
        continue


    voter_name = (input("Please enter your name: "))
    if voter_name in all_voters:
        print("Access denied! You have already voted.\nStep aside. Next voter, you may now proceed.\n..........")
        continue
    else:
        all_voters.append(voter_name)

    print("You are eligible to vote! Proceeding...")
    while True:
        pres_choice = input("Choose which part you would like to vote for in the Presidental election. The options are: 1. Democrat / 2. Republican / 3.Green-party\nPlease input the corresponding number choice: ")
        if pres_choice == "1":
            president_dem = president_dem+1
            print("Democratic presidential vote recorded.")
            break
        elif pres_choice == "2":
            president_rep = president_rep+1
            print("Republican presidential vote recorded.")
            break
        elif pres_choice == "3":
            president_green = president_green+1
            print("Green-party presidential vote recorded.")
            break
        else:
            print("Invalid presidential vote. Vote again.")
    while True:
        senator_choice = input("Please choose party you would like to vote for in Senate election.\nThe options are: 1. Democrat / 2. Republican / 3.Green-party\nPlease input the corresponding number choice: ")
        if senator_choice =="1":
            senator_dem=senator_dem+1
            print("Democartic senate vote recorded.")
            break
        elif senator_choice =="2":
            senator_rep+senator_rep+1
            print("Republican senate vote recorded.")
            break
        elif senator_choice == "3":
            senator_green=senator_green+1
            print("Green-party senate vote recorded.")
            break
        else:
            print("Invalid Senate vote. Vote again.")
    while True:
        house_choice = input("Please choose party you would like to vote for in the election for House of representatives.\nThe options are: 1. Democrat / 2. Republican / 3.Green-party\nPlease input the corresponding number choice: ")
        if house_choice =="1":
            house_dem = house_dem+1
            print("Democratic House vote recorded.")
            break
        elif house_choice =="2":
            house_rep = house_rep+1
            print("Republican House vote recorded.")
            break
        elif house_choice == "3":
            house_green = house_green +1
            print("Green-party House vote recorded.")
            break
        else:
            print("Invalid House vote. Vote again.")
    while True:
        gov_choice = input("Please choose party you would like to vote for in the election for governor.\nThe options are: 1. Democrat / 2. Republican / 3.Green-party\nPlease input the corresponding number choice: ")
        if gov_choice == "1":
            gov_dem=gov_dem+1
            print("Democratic Governor vote recorded.")
            break
        elif gov_choice == "2":
            gov_rep = gov_rep+1
            print("Republican Governor vote recorded.")
            break
        elif gov_choice == "3":
            gov_green = gov_green+1
            print("Green-party Governor vote recorded.")
            break
        else:
            print("Invalid Governor vote. Vote again.")
    
print("~~~  Presidential election results  ~~~")
if president_dem > president_green and president_rep:
    print("dem wins")
elif president_rep > president_green:
    print("republican wins")
else:
    print("Green wins")
